
@model AllCustomersModel

@{
    ViewData["Title"] = "All Customers";
}

<h2>All customers</h2>
<h3>Ordered in @( Model.OrderDirection.ToString().ToLower()) direction</h3>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                BirthDate
            </th>
            <th>
                IsYoungDriver
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
        <tr>
            <td>
                @customer.Name
            </td>
            <td>
                @customer.BirthDate.ToShortDateString();
            </td>
            <td>
                @(customer.IsYoungDriver?"Yes":"No")
            </td>
        </tr>   
        }
    </tbody>      
</table>