@model RentDetailsModel
<div>
    <h3>Клиент:<span> <a asp-controller="Clients" asp-action="DetailsByName" asp-route-name="@Model.Client">@Model.Client</a> </span> </h3>
</div>
<div class="row ">
    <div class="col-lg-5 col-md-5 col-lg-offset-1">
        <h4>Недвижимости:</h4>
        <hr />
        <ul class="list-unstyled ">
            @foreach (var property in Model.Properties)
            {
                <li>
                    Имот: <strong>@property.Name</strong> с площ: <strong>@property.Area</strong> кв.м
                </li>
            }
        </ul>
        <h4>Месечен наем без ДДС: @Model.MonthlyPrice.ToString("F2") лв</h4>
    </div>
    <div class="col-lg-5 col-md-5 ">

        <h4>Пaркоместа:</h4>
        <hr />

        @if (Model.ParkingSlots.Count() > 0)
        {
            <ul class="list-unstyled">
                @foreach (var slot in Model.ParkingSlots)
                {
                    <li>
                        Тип паркоместа: <strong>@slot.Type</strong> брой: <strong>@slot.Quantity</strong> и еденична цена:<strong> @slot.Price.ToString("F2")</strong>
                    </li>
                }
            </ul>
        }
        else
        {
            <h4>Няма наети паркоместа</h4>
        }
    </div>
    <hr />
</div>
<hr />
<div class="row">
    <div class="col-lg-5 col-md-5 col-lg-offset-1" ">
        <h4>Начална дата:</h4>
        <p><strong>@Model.StartDate.ToShortDateString()</strong></p>

    </div>
    <div class="col-lg-5 col-md-5">
        @if (Model.EndDate != null)
        {
            <h4>Крайна дата:</h4>
            <p>@Model.EndDate.Value.ToShortDateString()</p>
        }
        else
        {
            <h4>Няма посочена крайна дата на договора</h4>
        }

    </div>
</div>
<hr />

<div class="col-lg-8 col-md-8 bg-info col-lg-offset-1" ">
    <h4>Обща месечна сума без ДДС: <strong>@Model.TotalMonthlyPrice.ToString("F2")</strong> лв.</h4>

</div>

