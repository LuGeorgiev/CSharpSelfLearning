@model RentDetailsModel

<div>
    <h3>Клиент:<span> @Model.Client </span> </h3>
</div>
<div class="row ">
    <div class="col-lg-4 col-md-4 bg-info col-lg-offset-1">
        <h4>Недвижимости:</h4>
        <ul class="list-unstyled ">
            @foreach (var property in Model.Properties)
            {
                <li>
                    Имот: <strong>@property.Name</strong> с площ: <strong>@property.Area</strong> кв.м
                </li>
            }
        </ul>
    </div>
    <div class="col-lg-4 col-md-4 bg-info">

        <h4>Пaркоместа:</h4>
        @if (Model.ParkingSlots.Count() > 0)
        {
            <ul class="list-unstyled">
                @foreach (var slot in Model.ParkingSlots)
                {
                    <li>
                        Тип паркоместа: <strong>@slot.Type</strong> брой: <strong>@slot.Quantity</strong>
                    </li>
                }
            </ul>
        }
        else
        {
            <h4>Няма наети паркоместа</h4>
        }
    </div>
</div>
<div class="row">
    <div class="col-lg-4 col-md-4 col-lg-offset-1" ">
        <h4>Начална дата:</h4>
        <p><strong>@Model.StartDate.ToShortDateString()</strong></p>

    </div>
    <div class="col-lg-4 col-md-4">
        @if (Model.EndDate != null)
        {
            <h4>Крайна дата:</h4>
            <p>@Model.EndDate.Value.ToShortDateString()</p>
        }

    </div>
</div>
<div class="col-lg-8 col-md-8 bg-info col-lg-offset-1" ">
    <h3>Обща месечна сума: <strong>@Model.TotalMonthlyPrice.ToString("F2")</strong> лв.</h3>
</div>
