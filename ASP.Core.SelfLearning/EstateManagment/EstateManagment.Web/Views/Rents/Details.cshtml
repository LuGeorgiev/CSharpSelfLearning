    <hr class="col-xs-12">
    @if (User.IsInRole("Manager"))
    {
        <h2>Сканирани договори:</h2>
        <div>
            @await Component.InvokeAsync("ContractsList", new { rentId = Model.Id })
        </div>
    }
</div>


