@model FilterConsumablesFormModel

<div class="panel panel-info" >
    <div class="panel-heading">Филтриране по дата и клиент:</div>
    <div class="panel-body">
        <form method="get" class="form-inline">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group ">
                <label asp-for="ActiveClients"></label>
                <select asp-for="Client" asp-items="@Model.ActiveClients" class="form-control"> </select>
            </div>
            <div class="form-group ">
                <label asp-for="ShowAll"></label>
                <input asp-for="ShowAll"/>
            </div>

            <button asp-area="Payments" asp-action="FilterConsumables" asp-controller="Payments" type="submit" class="btn btn-default">Филтър</button>

        </form>
    </div>
</div>     


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

