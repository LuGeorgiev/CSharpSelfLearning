@model CreateCompanyFormModel
@{
    ViewData["Title"] = "Фирми";
}
<h2 class="text-center">@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-3 col-lg-3">
        <form method="post">
            <h4>Създаване на фирма:</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AccountablePerson"></label>
                <input asp-for="AccountablePerson" class="form-control" placeholder="МОЛ..."/>
                <span asp-validation-for="AccountablePerson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Имена фирмата..."/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <textarea asp-for="Address" class="form-control" placeholder="Адрес на фирмата..."></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bulstat"></label>
                <input asp-for="Bulstat" class="form-control" placeholder="Булстат..."/>
                <span asp-validation-for="Bulstat" class="text-danger"></span>
            </div>
            <button asp-action="Create" asp-controller="Companies" type="submit" class="btn btn-default btn-info">Създайте</button>
        </form>
    </div>

    <div class="col-md-9 col-lg-9">
        <table class="table table-striped table-hover">
            <thead class="bg-info">
                <tr>
                    <th scope="col">Име на Фирмата</th>
                    <th scope="col">Булста</th>
                    <th scope="col">Адрес</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var company in Model.Companies)
                {

                    <tr>
                        <td><a asp-controller="Companies" asp-action="Edit" asp-route-id="@company.Id">@company.Name</a></td>
                        <td>@company.Bulstat</td>
                        <td>@company.Address</td>
                        <td>
                            @*<a href="#" class="btn btn-default">Паркомясто</a>*@
                            <a asp-controller="Properties" asp-action="Create" asp-route-companyId="@company.Id" class="btn btn-info">Нов  имот</a>
                            <a href="javascript:window.history.back()" class="btn btn-default">Назад</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}