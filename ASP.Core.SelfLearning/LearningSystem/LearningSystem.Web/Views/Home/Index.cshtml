@model IEnumerable<CourseListingServiceModel>
@{
    ViewData["Title"] = "Active Courses";
}

<div class="jumbotron home-jumbotrone">
    <h1 class="text-center">Welcomem to our learning system</h1>
</div>

<div class="row home-page">
    @foreach (var course in Model)
    { 
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel panel-heading">
                    <h3 class="panel-title text-center">@course.Name</h3>
                </div>
                <div class="panel-body">
                    @*At the end this Guid newGuid is for escape from browser caching the same cats*@
                    <img src="https://api.thecatapi.com/v1/images/search?format=src&mime_types=image/gif&guid=@(Guid.NewGuid())" class="img-responsive" />
                    <br />
                    @course.StartDate.ToShortDateString() - @course.EndDate.ToShortDateString()
                </div>
            </div>
        </div>
    }

</div>

